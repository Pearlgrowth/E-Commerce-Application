<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: KES 0.00"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/paymentTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnMpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with M-Pesa"
        android:layout_below="@id/totalAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnOtherPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Payment Methods"
        android:layout_below="@id/btnMpay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
